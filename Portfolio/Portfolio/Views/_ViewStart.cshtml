@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
 var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
 
 string layout = "";
 if (controller == "Contact")
 {
 layout = "~/Views/Shared/Contact_Layout.cshtml";
 }
 else
 {
 layout = "~/Views/Shared/_Layout.cshtml";
 }

 Layout = layout;
}