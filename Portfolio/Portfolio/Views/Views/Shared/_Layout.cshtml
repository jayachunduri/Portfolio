<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
<link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <h1 class="Name"> 
            <strong>Jaya Chunduri</strong>

        </h1>
        <h3 class="Head">
            <nav id="HeadTabs">
            <a href="@Url.Action("Index", "Home")">
                <div class="HomeTab">Home</div> 
            </a>
            
            <a href="@Url.Action("Index","About")">
               <div class="AboutTab">About</div>
            </a>
                
            <a href="@Url.Action("Index","Work")">
                <div class="WorkTab">Work</div>
            </a>    
            
            <a href="@Url.Action("Index","Contact")">
                <div class="ContactTab">Contact</div>
            </a>   
            </nav>  
            </h3>
    </header>
    <section id="container" class="content-wrapper main-content clear-fix">
    @RenderBody()
    </section>

    <footer class="Footer">
        <div class="footerLeft"> Copyright (c) 2014 Jaya Chunduri </div>
        <div class="footerRight"> 
            <a href="@Url.Action("Index", "Home")">
                Home 
            </a>
            &nbsp;|&nbsp;
            <a href="@Url.Action("Index","About")">
               About 
            </a>
            &nbsp;|&nbsp;    
            <a href="@Url.Action("Index","Work")">
                Work
            </a>    
            &nbsp;|&nbsp;
            <a href="@Url.Action("Index","Contact")">
                Contact
            </a>     
       </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
